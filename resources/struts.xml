<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.ui.theme" value="simple" />
	<package name="default" extends="struts-default" namespace="/">
		<action name="login" class="actions.login.LoginAction">
			<result name="success">/pages/welcome.jsp</result>
			<result name="passenger">/passenger.jsp</result>
			<result name="error">/pages/login.jsp</result>
		</action>
		
		<action name="register" class="register.action.RegisterAction">
			<result name="register">/register.jsp</result>
		</action>
		
		<action name="register2" class="register.action.RegisterAction2">
			<result name="register2">/register2.jsp</result>
		</action>
		
		<action name="register3" class="register.action.RegisterAction3">
			<result name="register3">/register3.jsp</result>
		</action>
		
		<action name="bookFlight" class="book.action.BookAction">
			<result name="book">/bookForm.jsp</result>
		</action>
		
		<action name="bookCA" class="book.action.BookActionCA">
			<result name="bookCA">/bookCA.jsp</result>
		</action>
		
	</package>
</struts>